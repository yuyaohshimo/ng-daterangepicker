.daterangepicker__option
.daterangepicker__cutom
.daterangepicker__start
.daterangepicker__to
.daterangepicker__end
.daterangepicker__year
.daterangepicker__month
  display inline-block

.daterangepicker__input
  &[type=text]
    cursor pointer

.daterangepicker__dropdown
  position absolute
  border 1px solid #ddd
  
.daterangepicker__prev
  position absolute
  top 0
  left 0
  
.daterangepicker__next
  position absolute
  top 0
  right 0

.daterangepicker__calendars
  background-color #fff
  text-align center
  z-index 1
  .disabled
    color #aaa
  .selected
    background-color #3498db
    color #fff